<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical">

    <LinearLayout

        android:background="@drawable/borderline"
        android:clickable="true"
        android:contextClickable="true"
        android:id="@+id/layout_settings"
        android:onClick="SignedUserProfile"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="2dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_profile_pic"
            android:id="@+id/signedUser_profileUserImage"
            android:onClick="SignedUserProfile"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:onClick="SignedUserProfile"
                android:padding="9dp"
                android:id="@+id/signedUser_profileUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#e000"/>
            <TextView
                android:onClick="SignedUserProfile"
                android:padding="9dp"
                android:id="@+id/signedUser_profileUserStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Status"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout

        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="2dp">
        <ImageView

            android:background="@drawable/ic_account"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"
            android:id="@+id/signedUser_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:padding="4dp"
                android:id="@+id/signedUser_profileUserAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="#e000"/>
            <TextView
                android:padding="4dp"
                android:id="@+id/signedUser_profileUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy, security, change number"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="2dp">
    <ImageView

        android:background="@drawable/ic_chat"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitCenter"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:padding="4dp"
            android:id="@+id/signedUser_profileUserChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="#e000"/>
        <TextView
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme, wallpapers, chat history"/>

    </LinearLayout>

</LinearLayout>

    <LinearLayout

        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="2dp">
        <ImageView

            android:background="@drawable/ic_notifications"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:padding="4dp"
                android:id="@+id/signedUser_profileUserNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="#e000"/>
            <TextView
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message, group, call tones" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="2dp">
        <ImageView

            android:background="@drawable/ic_data_usage"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:padding="4dp"
                android:id="@+id/signedUser_profileUserData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data and storage usage"
                android:textColor="#e000"/>
            <TextView
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network usgae, auto-download"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="2dp">
        <ImageView

            android:background="@drawable/ic_help"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:padding="4dp"
                android:id="@+id/signedUser_profileUserHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="#e000"/>
            <TextView
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ, contact us, privacy policy"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>