<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:background="@drawable/ripple2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageBody_ImageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        app:civ_border_color="#29b6f6"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:id="@+id/messageBody_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"

            android:textColor="#E000"
            android:textStyle="bold" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/messageBody_lastMessage"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:layout_marginTop="1dp"
            android:text="Latest Message from various users"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView

            android:id="@+id/messageBody_time"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:text="Time"
            />

    </LinearLayout>


</LinearLayout>